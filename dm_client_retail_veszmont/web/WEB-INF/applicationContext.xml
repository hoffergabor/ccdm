	<bean id="userService" class="hu.iboard.coandco.datamagic.service.userservice.UserService">
		<property name="partnerDao" ref="partnerDao" />
		<property name="workerDao" ref="workerDao" />
		<property name="customerDao" ref="customerDao" />
		<property name="adminDao" ref="adminDao" />
		<property name="dmvSorszDao" ref="dmvSorszDao" />
	</bean>
	<bean id="shippingAddressService" class="hu.iboard.coandco.datamagic.service.shippingadressservice.ShippingAddressService">
		<property name="townshipDao" ref="townshipDao" />
		<property name="countyDao" ref="countyDao" />
		<property name="teruletDao" ref="teruletDao" />
		<property name="teruletcsDao" ref="teruletcsDao" />
		<property name="shippingAddressDao" ref="shippingAddressDao" />
