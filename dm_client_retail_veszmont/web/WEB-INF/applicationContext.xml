<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		 
		<property name="url"><value>jdbc:mysql://localhost:3306/dm_veszmont</value></property>
		<property name="username"><value>root</value></property>
		<property name="password"><value></value></property>
		
<!-- 		<property name="url"><value>jdbc:mysql://localhost:3306/DM_Veszmont</value></property> -->
<!-- 		<property name="username"><value>dm-veszmont</value></property> -->
<!-- 		<property name="password"><value>dm321</value></property> -->
	</bean>
	
	<bean id="openSessionInViewInterceptor" class="org.springframework.orm.hibernate3.support.OpenSessionInViewInterceptor"> 
		<property name="sessionFactory"><ref bean="sessionFactory" /></property>
		<property name="singleSession" value="true"/>
		<property name="flushModeName">
		<value>FLUSH_AUTO</value>
	</property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>hu.iboard.coandco.datamagic.model.afakodok.Afakodok
				</value>
				<value>hu.iboard.coandco.datamagic.model.arnev.Arnev
				</value>
				<value>hu.iboard.coandco.datamagic.model.aru.Aru
				</value>
				<value>hu.iboard.coandco.datamagic.model.aru.AruKisker
				</value>
				<value>hu.iboard.coandco.datamagic.model.cikkcsop.Cikkcsop
				</value>
				<value>hu.iboard.coandco.datamagic.model.content.Content
				</value>
				<value>hu.iboard.coandco.datamagic.model.county.County
				</value>
				<value>hu.iboard.coandco.datamagic.model.customer.Customer
				</value>
				<value>hu.iboard.coandco.datamagic.model.deviza.Deviza
				</value>
				<value>hu.iboard.coandco.datamagic.model.dolgozo.Dolgozo
				</value>
				<value>hu.iboard.coandco.datamagic.model.newsletteremail.NewsLetterEmail
				</value>
				<value>hu.iboard.coandco.datamagic.model.partner.Partner
				</value>
				<value>hu.iboard.coandco.datamagic.model.shippingaddress.ShippingAddress
				</value>
				<value>hu.iboard.coandco.datamagic.model.szamla.Szamla
				</value>
				<value>hu.iboard.coandco.datamagic.model.tetel.Tetel
				</value>
				<value>hu.iboard.coandco.datamagic.model.township.TownShip
				</value>
				<value>hu.iboard.coandco.datamagic.model.vevocsop.Vevocsop
				</value>
				<value>hu.iboard.coandco.datamagic.model.rendel.Rendel
				</value>
				<value>hu.iboard.coandco.datamagic.model.rendtet.Rendtet
				</value>
				<value>hu.iboard.coandco.datamagic.model.wishlist.Wishlist
				</value>
				<value>hu.iboard.coandco.datamagic.model.wishlistitem.WishlistItem
				</value>
				<value>hu.iboard.coandco.datamagic.model.admin.Admin
				</value>
				<value>hu.iboard.coandco.datamagic.model.productcatalog.ProductCatalog
				</value>
				<value>hu.iboard.coandco.datamagic.model.dmvsorsz.DmvSorsz
				</value>
				<value>hu.iboard.coandco.datamagic.model.terulet.Terulet
				</value>
				<value>hu.iboard.coandco.datamagic.model.teruletcs.Teruletcs
				</value>
				<value>hu.iboard.coandco.datamagic.model.bizkomment.Bizkomment
				</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.connection.autocommit">true</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect
				</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.jdbc.batch_versioned_data">true</prop>
				<prop key="hibernate.jdbc.use_streams_for_binary">true</prop>
				<prop key="hibernate.order_updates">true</prop>
				<prop key="hibernate.max_fetch_depth">5</prop>
				<prop key="hibernate.default_batch_fetch_size">16</prop>
				<prop key="hibernate.jdbc.batch_size">25</prop>
				<prop key="hibernate.jdbc.fetch_size">8</prop>
				<!--		 Enable Hibernateâ€™s automatic session context management -->
				<prop key="hibernate.connection.release_mode">auto</prop>
				<prop key="hibernate.transaction.auto_close_session">true</prop>
				<prop key="hibernate.connection.autoReconnect">true</prop>
				<prop key="hibernate.connection.autoReconnectForPools">true</prop>
				<prop key="hibernate.connection.is-connection-validation-required">false</prop>
				<prop key="current_session_context_class">thread</prop>
				<prop key="hibernate.cache.use_second_level_cache">true</prop>
				<prop key="hibernate.cache.use_query_cache">true</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider
				</prop>
				<prop key="hibernate.c3p0.acquire_increment">2</prop>
				<prop key="hibernate.c3p0.idle_test_period">2</prop>
				<prop key="hibernate.c3p0.max_size">10</prop>
				<prop key="hibernate.c3p0.max_statements">100</prop>
				<prop key="hibernate.c3p0.min_size">5</prop>
				<prop key="hibernate.c3p0.timeout">180</prop>
				<prop key="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider
				</prop>
			</props>
		</property>
	</bean>
	
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean name="workerDao" class="hu.iboard.coandco.datamagic.dao.worker.WorkerDao">
